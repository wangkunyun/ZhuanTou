<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/constrain"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_jf_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="2019年11月11日 11:11"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.constraint.ConstraintLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/yuanjiaobtn_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jf_time">


        <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/iv_jifen"
            android:background="@color/lanse"
            android:layout_margin="8dp"
            android:layout_width="43dp"
            android:layout_height="43dp"
            />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_jifen"
            android:id="@+id/tv_jifen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赛睿鼠标垫"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_jifen_name"
            app:layout_constraintLeft_toRightOf="@+id/iv_jifen"
            android:id="@+id/tv_jifen_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />

        <TextView
            android:layout_marginRight="15dp"
            android:drawableRight="@mipmap/icon_oa_enter"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tv_jifen_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-100砖头"
            android:textColor="#ff333333"
            android:textSize="14sp"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
