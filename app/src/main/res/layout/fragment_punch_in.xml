<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.oa.punch.PunchInFragment">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_SetonWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:text="上班打卡 09:00"
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/onWorkLate"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/yuanjiao_daka"
            android:gravity="center"
            android:text="迟到"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_PunchOnWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="50dp"
            android:text=""
            android:textColor="#ff333333"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/tv_locationOnWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="84dp"
            android:drawableLeft="@mipmap/icon_daka_local"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_ClickApplyOnWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="117dp"
            android:text="申请补卡"
            android:textColor="#ff65c9d2"
            android:textSize="16sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF">


        <TextView
            android:id="@+id/tv_SetOffWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="25dp"
            android:text="上班打卡 09:00"
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/offWorkLate"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/yuanjiao_daka"
            android:gravity="center"
            android:text="迟到"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_PunchOffWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="50dp"
            android:text=""
            android:textColor="#ff333333"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/tv_locationOffWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="84dp"
            android:drawableLeft="@mipmap/icon_daka_local"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_ClickApplyOffWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="117dp"
            android:text="申请补卡"
            android:textColor="#ff65c9d2"
            android:textSize="16sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">
        <!--设置颜色-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:background="#FFFFFF" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_piece" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F8F8F8" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/cl_ClickPunchIn"
            android:layout_width="162dp"
            android:layout_height="162dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:background="@mipmap/icon_bg_normal">

            <TextView
                android:id="@+id/showTvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="49dp"
                android:text="上班打卡"
                android:textColor="#ffffffff"
                android:textSize="20sp" />


            <TextClock
                android:id="@+id/tv_punchTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="77dp"
                android:format12Hour="HH:mm"
                android:format24Hour="HH:mm"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp">

            <TextView
                android:id="@+id/tv_localNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="11"
                android:singleLine="true"
                android:text="当前位置：北京市通州区世界侨商"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_ClickReLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新定位"
                android:textColor="#ff65c9d2"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>