<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rela_collect"
    android:layout_height="wrap_content"
    android:background="@color/f8">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/f8"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/yuanjiaobtn_8dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/shop_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:paddingBottom="35dp"
            android:src="@drawable/select"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rela_shop_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/shop_select"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/tv_collect_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/iv_collect"
                android:paddingLeft="8dp"
                android:text="Rolex劳力士绿水鬼手表潜116610LV黑水鬼机械表男表"
                android:textColor="#ff333333"
                android:textSize="14sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_collect_name"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/iv_collect"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">


                <TextView
                    android:id="@+id/tv_shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥88,000"
                    android:textColor="@color/ffe8"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/yuanjiaobtn_grey9dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="1dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="1dp"
                    android:text="找相似"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
