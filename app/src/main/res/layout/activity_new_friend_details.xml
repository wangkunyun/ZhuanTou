<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.chat.activity.NewFriendDetails">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:id="@+id/rl_click_peopleDetails"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/baise">

        <ImageView
            android:id="@+id/img_newFriendHead"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/head_portrait" />

        <TextView
            android:id="@+id/tv_newFriendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="66dp"
            android:text="王大云"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/icon_oa_enter" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8F8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@color/baise"
        android:orientation="vertical"
        android:paddingLeft="66dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="打招呼："
            android:textColor="#ff999999"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="你好，我是王大云"
            android:textColor="#ff999999"
            android:textSize="16sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="24dp">
        <Button
            android:id="@+id/btn_newFriend_refuse"
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="44dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/yuanjiaobtn2"
            android:text="拒绝"
            android:textColor="@color/baise"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_newFriend_agree"
            android:layout_width="126dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="44dp"
            android:background="@drawable/yuanjiaobtn"
            android:text="同意"
            android:textColor="@color/baise"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>