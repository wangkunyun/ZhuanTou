<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_bc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landing.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:background="@mipmap/bg_color">


        <ImageView
            android:layout_width="258dp"
            android:layout_height="64dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="88dp"
            android:src="@mipmap/logo" />

        <ImageView
            android:id="@+id/login_goback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="32dp"
            android:padding="5dp"
            android:src="@drawable/goback" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="198dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/yuanjiao"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp">

            <ImageView
                android:id="@+id/login_icon1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:src="@mipmap/icon_shouji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/login_icon1"
                android:text="手机号"
                android:textColor="@color/t1"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_login_et"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/login_edt1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number|numberDecimal"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="18sp"
                android:theme="@style/MyEditText" />

            <ImageView
                android:id="@+id/login_cha"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/oval" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/login_icon3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="24dp"
                android:src="@mipmap/icon_password" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="密码"
                android:textColor="@color/t1"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_login_et"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/login_edt2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="18sp"
                android:theme="@style/MyEditText" />

            <ImageView
                android:id="@+id/login_cha2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/oval" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp">

            <TextView
                android:id="@+id/login_dlzc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="手机验证码登录/注册"
                android:textColor="@color/t3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/login_wjmm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="24dp"
                android:text="忘记密码"
                android:textColor="@color/t4"
                android:textSize="14sp" />
        </RelativeLayout>


        <Button
            android:id="@+id/login_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="155dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            android:background="@drawable/yuanjiaobtn"
            android:text="立即登录"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_xy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意"
            android:textColor="@color/t4"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/login_userxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《砖头用户协议》"
            android:textColor="@color/t3"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>