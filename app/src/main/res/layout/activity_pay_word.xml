<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.mine.PayWordActivity">

    <include layout="@layout/layout_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="64dp"
        android:text="请输入6位数字支付密码"
        android:textColor="#ff666666"
        android:textSize="14sp" />

    <com.ztkj.wky.zhuantou.landing.SecurityCodeView2
        android:id="@+id/edit_payWord_security_code"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="27dp" />

    <Button
        android:id="@+id/PayWord_next"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="155dp"
        android:layout_height="44dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="175dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/yuanjiaobtn"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>