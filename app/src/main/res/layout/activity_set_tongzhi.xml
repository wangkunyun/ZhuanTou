<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Activity.oa.SetTongzhi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/t3">

        <ImageView
            android:id="@+id/layout_back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:src="@drawable/goback" />

        <TextView
            android:id="@+id/layout_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置群公告"
            android:textColor="@color/baise"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="清空"
            android:visibility="gone"
            android:textColor="@color/baise"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#F2F6F9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <EditText
            android:id="@+id/etGroupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:hint="输入群公告"
            android:maxLength="36"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:singleLine="true"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/my_cursor"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#F2F6F9" />

    <Button
        android:id="@+id/btnFinish_Tongzhi"
        android:layout_width="155dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="379dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/yuanjiaobtn"
        android:text="完成"
        android:visibility="gone"
        android:textColor="@color/baise"
        android:textSize="18sp" />

</LinearLayout>