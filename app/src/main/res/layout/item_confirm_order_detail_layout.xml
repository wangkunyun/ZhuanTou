<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/order_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/icon_clock" />

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/order_pic"
        android:text="Rolex劳力士绿水鬼手表潜航者116610LV黑水鬼机械表男表"
        android:textColor="@color/f33"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_name"
        android:layout_alignStart="@+id/tv_order_name"
        android:layout_marginTop="8dp"
        android:text="蓝黑 32"
        android:textColor="@color/t4"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_pic"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="32"
            android:textColor="@color/t4"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥88,000"
            android:textColor="@color/t6"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
