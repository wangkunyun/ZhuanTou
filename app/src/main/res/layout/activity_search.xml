<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.SearchActivity"
    android:orientation="vertical"
    android:background="#F8F8F8"
    android:id="@+id/bigsearch_bc">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/t3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="6dp"
                android:padding="5dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:id="@+id/bigsearch_back"
                android:src="@drawable/goback"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/bigsearch_edt"
                android:textSize="16sp"
                android:textColor="@color/baise"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/fxedt"
                android:layout_toRightOf="@+id/bigsearch_back"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="11dp"
                android:hint="搜索"
                android:textColorHint="#CCFBFF"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/my_cursor"
                android:theme="@style/MyEditText"/>

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/searchz"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/bigsearch_back"
                android:layout_marginLeft="27dp"/>

            <!--<ImageView-->
                <!--android:layout_width="44px"-->
                <!--android:layout_height="44px"-->
                <!--android:layout_marginLeft="22px"-->
                <!--android:src="@drawable/searchz"-->
                <!--android:layout_centerVertical="true"-->
                <!--/>-->

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bigsearch_rv1">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bigsearch_rv2">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>