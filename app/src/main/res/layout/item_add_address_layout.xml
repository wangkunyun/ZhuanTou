<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/confim_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">


        <RelativeLayout
            android:id="@+id/rela_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:singleLine="true"
                android:gravity="center"
                android:id="@+id/n3_headImg"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text=""
                android:textColor="@color/white"
                android:background="@mipmap/zhanweitu_shop" />

            <TextView
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/cofirm_avatar_user_name"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />
        </RelativeLayout>


        <ImageView
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_oa_enter" />

        <TextView
            android:id="@+id/cofirm_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rela_avatar"
            android:text=""
            android:textColor="@color/f33"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/confirm_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/go_back"
            android:layout_toRightOf="@+id/cofirm_user_name"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/t4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tc_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cofirm_user_name"
            android:layout_alignStart="@+id/cofirm_user_name"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/go_back"
            android:layout_toRightOf="@+id/rela_avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/t6"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/f8" />
</LinearLayout>
