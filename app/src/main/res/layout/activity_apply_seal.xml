<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.oa.examineAndapprove.apply.ApplySeal">

    <include layout="@layout/layout_toolbar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF2F6F9"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--实时保存-->
            <TextView
                android:id="@+id/Real_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="未填完将在返回时保存"
                android:textColor="@color/t6"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="9dp"
                android:background="@drawable/circle_report_linear"
                android:orientation="vertical">

                <!--用印人-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/baise"
                    android:paddingLeft="16dp"
                    android:paddingRight="23dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="用印人"
                        android:textColor="#FF333333"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/etSealWho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入"
                        android:imeOptions="actionNext"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:textColor="@color/t5"
                        android:textCursorDrawable="@drawable/edittext_color"
                        android:textSize="18sp" />


                    <!--分割线-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#FFE5E5E5" />

                </RelativeLayout>

                <!--公章类型-->
                <RelativeLayout
                    android:id="@+id/click_rl_sealType"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/baise"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="公章类型"
                        android:textColor="#FF333333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sealType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="22dp"
                        android:text="请选择"
                        android:textColor="#FF999999"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/enterStartTime"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_oa_enter" />

                    <ImageView
                        android:id="@+id/clearStartTime"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/oval"
                        android:visibility="gone" />

                    <!--分割线-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#FFE5E5E5" />

                </RelativeLayout>

                <!--用印日期-->
                <RelativeLayout
                    android:id="@+id/click_rl_sealDate"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/baise"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="用印日期"
                        android:textColor="#FF333333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sealDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="22dp"
                        android:text="请选择"
                        android:textColor="#FF999999"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/enterEndTime"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_oa_enter" />

                    <ImageView
                        android:id="@+id/clearEndTime"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/oval"
                        android:visibility="gone" />

                    <!--分割线-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#FFE5E5E5" />

                </RelativeLayout>

                <!--用印文件名称-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/baise"
                    android:paddingLeft="16dp"
                    android:paddingRight="23dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="用印文件名称"
                        android:textColor="#FF333333"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/etSealFilesName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入"
                        android:imeOptions="actionNext"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:textColor="@color/t5"
                        android:textCursorDrawable="@drawable/edittext_color"
                        android:textSize="18sp" />


                    <!--分割线-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#FFE5E5E5" />

                </RelativeLayout>

                <!--文件份数-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/baise"
                    android:paddingLeft="16dp"
                    android:paddingRight="23dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="文件份数"
                        android:textColor="#FF333333"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/et_FilesNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请输入"
                        android:imeOptions="actionNext"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:textColor="@color/t5"
                        android:textCursorDrawable="@drawable/edittext_color"
                        android:textSize="18sp" />


                    <!--分割线-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#FFE5E5E5" />

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#F2F6F9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:text="审批"
                        android:textColor="#ff333333"
                        android:textSize="14sp" />
                </LinearLayout>
                <!--日志接收人-->
                <RelativeLayout
                    android:id="@+id/click_rl_addApppover"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:background="@color/baise"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="审批人"
                        android:textColor="#FF333333"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/report_add_address" />

                </RelativeLayout>
                <!--日志接收人列表-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/baise"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/re_approver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/baise"
                        android:paddingLeft="20dp"
                        android:paddingRight="27dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#FFE5E5E5" />
                </LinearLayout>

                <!--日志接收人-->
                <RelativeLayout
                    android:id="@+id/click_rl_addApppover2"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/baise"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="抄送人"
                        android:textColor="#FF333333"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/report_add_address" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#FFE5E5E5" />
                </RelativeLayout>
                <!--日志接收人列表-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/baise"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/re_approver2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/baise"
                        android:paddingStart="20dp"
                        android:paddingEnd="27dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="#FFE5E5E5" />
                </LinearLayout>


                <Button
                    android:id="@+id/btnSubmit_leave"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="69dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/yuanjiaobtn"
                    android:text="提交"
                    android:textColor="@color/baise"
                    android:textSize="18sp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>