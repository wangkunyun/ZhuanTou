<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2F6F9"
    android:orientation="vertical"

    tools:context=".Activity.oa.report.WriteReportFragment">

    <!--最近日报-->
    <TextView
        android:id="@+id/tv_real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="最近常用"
        android:textColor="@color/t6"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/recently"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/circle_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_report_blue"
            android:gravity="center"
            android:text=""
            android:textColor="@color/baise"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_type_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="日报"
            android:textColor="#FF333333"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上次提交:"
                android:textColor="#FF999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/recentlylTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019年07月22日"
                android:textColor="#FF999999"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:background="@drawable/circle_report_linear"
        android:orientation="vertical"
        android:paddingLeft="24dp">

        <!--日报-->
        <LinearLayout
            android:id="@+id/date_report"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:paddingRight="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_report_blue"
                android:gravity="center"
                android:text="日"
                android:textColor="@color/baise"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="日报"
                android:textColor="#FF333333"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="69dp"
            android:background="#FFF8F8F8" />


        <!--周报-->
        <LinearLayout
            android:id="@+id/week_report"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_report_blue"
                android:gravity="center"
                android:text="周"
                android:textColor="@color/baise"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18sp"
                android:text="周报"
                android:textColor="#FF333333"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="69dp"
            android:background="#FFF8F8F8" />


        <!--月报-->
        <LinearLayout
            android:id="@+id/month_report"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_report_blue"
                android:gravity="center"
                android:text="月"
                android:textColor="@color/baise"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="月报"
                android:textColor="#FF333333"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="69dp"
            android:background="#FFF8F8F8" />


        <!--工作总结-->
        <LinearLayout
            android:id="@+id/report_work_summary"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_report_orange"
                android:gravity="center"
                android:text="总结"
                android:textColor="@color/baise"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="工作总结"
                android:textColor="#FF333333"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="69dp"
            android:background="#FFF8F8F8" />

        <!--工作总结-->
        <LinearLayout
            android:id="@+id/report_work_meeting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_report_blue2"
                android:gravity="center"
                android:text="会议"
                android:textColor="@color/baise"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="会议记录"
                android:textColor="#FF333333"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="69dp"
            android:background="#FFF8F8F8" />


    </LinearLayout>
</LinearLayout>