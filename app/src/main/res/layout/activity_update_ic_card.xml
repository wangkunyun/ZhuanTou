<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baise"
    android:orientation="vertical"
    tools:context=".Activity.mine.UpdateIcCard">

    <include layout="@layout/layout_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="上传身份证正面"
        android:textColor="#ff666666"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/click_IdCardPros"
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:scaleType="fitXY"
        android:src="@mipmap/id_card_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="上传身份证反面"
        android:textColor="#ff666666"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/click_IdCardCons"
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:scaleType="fitXY"
        android:src="@mipmap/id_card_down" />


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="155dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@drawable/yuanjiaobtn"
        android:text="完成"
        android:textColor="@color/baise"
        android:textSize="18sp" />


</LinearLayout>