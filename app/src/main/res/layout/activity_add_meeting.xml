<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6F9"
    android:orientation="vertical"
    tools:context=".Activity.oa.report.AddMeeting">

    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="标题"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etMeetingTitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="44dp"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入会议标题"
            android:imeOptions="actionNext"
            android:maxLength="19"
            android:textCursorDrawable="@drawable/edittext_color"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/clickClear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/oval" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="内容"
        android:textColor="#ff999999"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#FFFFFF">

        <EditText
            android:id="@+id/etMeetingContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入"
            android:imeOptions="actionNext"
            android:maxLength="249"
            android:textCursorDrawable="@drawable/edittext_color"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnMeetingSave"
        android:layout_width="155dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:background="@drawable/yuanjiaobtn"
        android:text="保存"
        android:textColor="@color/baise"
        android:textSize="18sp" />

</LinearLayout>