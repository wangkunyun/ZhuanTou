<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".H5.H5Activity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/h5rv1"
        android:background="@color/baise">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="6dp"
                android:padding="5dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@drawable/goback2"
                android:id="@+id/h5_goback"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/t5"
                android:text=""
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="0.9"
                android:id="@+id/h5_title"/>

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_share_black2"
                android:id="@+id/h5_share"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_below="@+id/h5rv1"
        android:id="@+id/h5xiahua"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000E6"/>

    <WebView
        android:layout_below="@+id/h5xiahua"
        android:id="@+id/h5_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>

</RelativeLayout>