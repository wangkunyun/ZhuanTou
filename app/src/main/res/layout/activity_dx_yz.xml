<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landing.DxYzActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:background="@mipmap/img_logo_bg2">

        <ImageView
            android:id="@+id/dx_yz_goback"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="32dp"
            android:padding="5dp"
            android:src="@drawable/goback" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="343dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="188dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/yuanjiao">

        <ImageView
            android:id="@+id/dx_yz_icon1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/icon_shouji" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/dx_yz_icon1"
            android:text="验证码"
            android:textColor="@color/t1"
            android:textSize="14sp" />

        <com.ztkj.wky.zhuantou.landing.SecurityCodeView
            android:id="@+id/edit_security_code"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/dx_yz_icon1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="60dp"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_security_code"
            android:layout_centerInParent="true"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dx_yz_tk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/t4"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dx_yz_cxsrts_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="@color/t3"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/dx_yx_btn"
            android:layout_width="155dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:background="@drawable/yuanjiaobtn"
            android:text="重新发送"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>