<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/t3"
    tools:context=".n1fra.N2Fragment">

    <TextView
        android:id="@+id/n2_sysm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="34dp"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="0.9"
        android:text="使用说明"
        android:textColor="@color/baise"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="0.9"
        android:text="通行二维码"
        android:textColor="@color/baise"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/click_emergencyPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="34dp"
        android:includeFontPadding="false"
        android:lineSpacingMultiplier="0.9"
        android:text="紧急电话"
        android:textColor="@color/baise"
        android:textSize="14sp" />


    <!--//先Gone掉  已无用-->
    <ImageView
        android:id="@+id/n2_most"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="31dp"
        android:layout_marginRight="16dp"
        android:padding="6dp"
        android:src="@drawable/nav_most_icon_default"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/n2_bg1"
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:layout_below="@id/n2_sysm"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="27dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_up">

        <TextView
            android:id="@+id/n2_tvts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="0.9"
            android:text="将下方二维码对准速通门屏幕进站"
            android:textColor="@color/t6"
            android:textSize="14sp" />

        <!--刷新-->
        <ImageView
            android:id="@+id/n2_refresh"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/most_icon_update" />


        <!--android:text="对不起，您暂时没有该权限。-->
        <!--请前往所属公司或物业置办。"-->
        <TextView
            android:id="@+id/n2_ts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp" />

        <!--二维码-->
        <ImageView
            android:id="@+id/n2_ewm"
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp" />
        
        <LinearLayout
            android:id="@+id/lin_wait_erweima_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="82dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="116dp"
                android:layout_height="91dp"
                android:src="@mipmap/wait_erweima_apply"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的信息正在等待审核.."
                android:textColor="#ff65c9d2"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如长时间未通过，请联系企业pc负责人进行审批"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>


        <!--&lt;!&ndash;访客授权&ndash;&gt;-->
        <!--<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/cardview_banner"-->
