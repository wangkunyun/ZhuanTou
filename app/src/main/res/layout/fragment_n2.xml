        <!--访客授权-->
        <Button
            android:id="@+id/n2_fangke"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="18dp"
            android:background="@drawable/yuanjiaobtn"
            android:elevation="5dp"
            android:text="访客授权"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/n2_bg2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/n2_bg1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_down">

        <ImageView
            android:layout_width="312dp"
            android:layout_height="69dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:src="@drawable/img_punch" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n2_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日工作时长已超过"
                android:textColor="@color/baise"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/n2_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/baise"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%的人"
                android:textColor="@color/baise"
                android:textSize="14dp" />

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/n2_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="提示：在首页阅读文章可以获得积分哦"
        android:layout_below="@id/n2_bg2"
        android:layout_marginTop="16dp"
        android:textColor="#FFE8E8E8"
        android:textSize="14sp" />

</RelativeLayout>