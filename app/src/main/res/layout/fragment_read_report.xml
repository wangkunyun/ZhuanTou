<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lanse"
    android:orientation="vertical"
    tools:context=".Activity.oa.report.ReadReportFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/circle_report_linear"
        android:orientation="vertical">

        <com.androidkun.xtablayout.XTabLayout
            android:id="@+id/xTablayout"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="115dp"
            app:xTabBackgroundColor="#FFFFFF"
            app:xTabDisplayNum="5"
            app:xTabDividerWidthWidthText="true"
            app:xTabIndicatorColor="@color/lanse"
            app:xTabMode="fixed"
            app:xTabSelectedTextColor="@color/lanse"
            app:xTabSelectedTextSize="14sp"
            app:xTabTextColor="#FF999999"
            app:xTabTextSize="14sp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/xTablayout" />

        <TextView
            android:id="@+id/ReportRedDot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="123dp"
            android:background="@drawable/yuanjiaobtnmeaage"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>