<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lanse"
    android:orientation="vertical"
    tools:context=".Activity.oa.report.ReadReportDetails">

    <!--toolbar-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/sz_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/t3">

            <ImageView
                android:id="@+id/back"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:src="@drawable/goback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="日志详情"
                android:textColor="@color/baise"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="更多"
                android:textColor="@color/baise"
                android:textSize="16sp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/circle_report_linear"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:overScrollMode="never"
        android:scrollbars="none">
        <!--ScrollView内嵌套的rela-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_report_linear"
            android:orientation="vertical">

            <!--信息-->
            <RelativeLayout
                android:id="@+id/details_relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/details_report_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="小小云的周报"
                    android:textColor="#FF333333"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/details_report_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/details_report_name"
                    android:layout_marginTop="6dp"
                    android:text="07-02 17:00"
                    android:textColor="#FF999999"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/details_report_img_head"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/head_portrait" />

            </RelativeLayout>

            <!--工作内容-->
            <LinearLayout
                android:id="@+id/details_lin_job_contents"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="16dp"
                android:visibility="gone">

                <!--工作总结-->
                <TextView
                    android:id="@+id/details_report_work_content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="工作内容"
                    android:textColor="#FF333333"
                    android:textSize="16sp" />
                <!--工作内容-->
                <TextView
                    android:id="@+id/details_report_work_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="17dp"
                    android:text="1、本周建立了“世界第一高大厦”，总高度达4888m。2、世界各大媒体争相报道，一日之间…"
                    android:textColor="#FF333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <!--完成情况-->
            <LinearLayout
                android:id="@+id/details_lin_performance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="16dp"
                android:visibility="gone">

                <!--工作总结-->
                <TextView
                    android:id="@+id/details_report_performance_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="完成情况"
                    android:textColor="#FF333333"
                    android:textSize="16sp" />
                <!--工作内容-->
                <TextView
                    android:id="@+id/details_report_performance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="17dp"
                    android:text="1、本周建立了“世界第一高大厦”，总高度达4888m。2、世界各大媒体争相报道，一日之间…"
                    android:textColor="#FF333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <!--下一步计划-->
            <LinearLayout
                android:id="@+id/details_lin_plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="16dp"
                android:visibility="gone">

                <!--工作总结-->
                <TextView
                    android:id="@+id/details_report_plan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="下一步计划"
                    android:textColor="#FF333333"
                    android:textSize="16sp" />
                <!--工作内容-->
                <TextView
                    android:id="@+id/details_report_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_marginRight="17dp"
                    android:text="1、本周建立了“世界第一高大厦”，总高度达4888m。2、世界各大媒体争相报道，一日之间…"
                    android:textColor="#FF333333"
                    android:textSize="14sp" />
            </LinearLayout>


            <!--抄送-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_relative"

                android:layout_marginTop="25dp"
                android:background="@drawable/circle_report_linear"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details_report_read"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="#FFF2F6F9"
                    android:gravity="center_vertical"
                    android:paddingLeft="24dp" />
                <!--android:text="已读 2"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/baise">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/re_details_approver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/baise"
                        android:paddingLeft="20dp"
                        android:paddingRight="27dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/details_report_unread"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="#FFF2F6F9"
                    android:gravity="center_vertical"
                    android:paddingLeft="24dp"
                    android:text="未读 2"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/baise"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="31dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/head_portrait" />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/head_portrait" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>