<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.live_shop.invoice.InvoiceDetailsFinishActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/lanse">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="申请成功"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_Invoice"
            android:layout_width="325dp"
            android:layout_height="325dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
            android:src="@mipmap/img_live_shop_zhanwei" />

    </LinearLayout>


    <TextView
        android:id="@+id/downloadImg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/yuanjiaobtn"
        android:gravity="center"
        android:text="下载图片"
        android:textColor="@color/baise"
        android:textSize="18sp" />
</RelativeLayout>