<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6F9"
    android:orientation="vertical"
    tools:context=".Activity.chat.activity.SearchFriend">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#65C9D2">

        <ImageView
            android:id="@+id/back"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:src="@drawable/goback" />

        <!--内部搜索框-->
        <LinearLayout
            android:layout_width="271dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:background="@drawable/circle_search_friends">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/icon_search" />

            <EditText
                android:id="@+id/etFriendNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:hint="输入手机号搜索好友"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="#CCFBFF"
                android:textColorHint="#CCFBFF"
                android:textCursorDrawable="@drawable/my_cursor"
                android:textSize="16dp"
                android:theme="@style/MyEditText" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="搜索"
            android:textColor="#ffffffff"
            android:textSize="16sp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/btn_Lin"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="16sp"
            android:background="#FFFFFF"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/img_SearchHead"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:src="@drawable/head_portrait" />

            <TextView
                android:id="@+id/tv_SearchName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="17sp"
                android:text="王大云"
                android:textColor="#ff333333"
                android:textSize="18sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_SearchNoFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:text="暂无此用户，快去邀请他加入小砖吧！"
            android:textColor="#ff999999"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>