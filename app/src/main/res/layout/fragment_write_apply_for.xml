<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.oa.examineAndapprove.WriteApplyForFragment">

    <!--toolbar-->
    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recently"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="最近常用"
                android:textColor="#ff666666"
                android:textSize="14sp" />

            <!--最近常用-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/ReRecently"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:visibility="visible" />

            <!--请假申请  加班申请  出差申请  外勤申请  外出申请-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/circle_report_linear"
                android:orientation="vertical">
                <!--人事-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="8dp"
                    android:text="人事"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#F8F8F8" />

                <!--请假申请 加班申请 出差申请 外勤申请 外出申请-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:paddingLeft="21dp">

                    <RelativeLayout
                        android:id="@+id/click_apply_leave"
                        android:layout_width="match_parent"
                        android:layout_height="72dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_apply_leave" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="65dp"
                            android:text="请假申请"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="49dp"
                            android:background="#F8F8F8" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/click_apply_overtime"
                        android:layout_width="match_parent"
                        android:layout_height="72dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_apply_overtime" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="65dp"
                            android:text="加班申请"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="49dp"
                            android:background="#F8F8F8" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/click_apply_evection"
                        android:layout_width="match_parent"
                        android:layout_height="72dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_apply_evection" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="65dp"
                            android:text="出差申请"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="49dp"
                            android:background="#F8F8F8" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/click_apply_outworker"
                        android:layout_width="match_parent"
                        android:layout_height="72dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_apply_outworker" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="65dp"
                            android:text="外勤申请"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="49dp"
                            android:background="#F8F8F8" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/click_apply_goout"
                        android:layout_width="match_parent"
                        android:layout_height="72dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_apply_goout" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="65dp"
                            android:text="外出申请"
                            android:textColor="#ff333333"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="49dp"
                            android:background="#F8F8F8" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/add_buka"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:drawableLeft="@mipmap/day"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:text="补卡记录"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>

            <!--财务-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="财务"
                android:textColor="#333333"
                android:textSize="14sp" />

            <!--费用申请 付款申请-->
            <LinearLayout
                android:id="@+id/click_apply_reimbursement"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/baise"
                android:orientation="vertical"
                android:paddingLeft="21dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_apply_reimbursement" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="65dp"
                        android:text="费用申请"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="49dp"
                        android:background="#F8F8F8" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/click_apply_payfor"
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_apply_payfor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="65dp"
                        android:text="付款申请"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                </RelativeLayout>


            </LinearLayout>


            <!--行政-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="行政"
                android:textColor="#333333"
                android:textSize="14sp" />

            <!--费用申请 付款申请-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="130dp"
                android:background="@color/baise"
                android:orientation="vertical"
                android:paddingLeft="21dp">

                <RelativeLayout
                    android:id="@+id/click_apply_seal"
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_apply_seal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="65dp"
                        android:text="用印申请"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="49dp"
                        android:background="#F8F8F8" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/click_apply_usercar"
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_apply_usercar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="65dp"
                        android:text="用车申请"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>