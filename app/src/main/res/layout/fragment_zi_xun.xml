<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".messagefra.ZiXunFragment"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:id="@+id/zixun_group">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RadioButton
                    android:layout_centerInParent="true"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:text=""
                    android:textColor="@color/t3"
                    android:button="@null"
                    android:textSize="14sp"
                    android:background="@drawable/alpha"
                    android:gravity="center"
                    android:id="@+id/zixun_btn1"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RadioButton
                    android:layout_centerInParent="true"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:text=""
                    android:textColor="@color/t3"
                    android:button="@null"
                    android:textSize="14sp"
                    android:background="@drawable/alpha"
                    android:gravity="center"
                    android:id="@+id/zixun_btn2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RadioButton
                    android:layout_centerInParent="true"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:text=""
                    android:textColor="@color/t3"
                    android:button="@null"
                    android:textSize="14sp"
                    android:background="@drawable/alpha"
                    android:gravity="center"
                    android:id="@+id/zixun_btn3"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RadioButton
                    android:layout_centerInParent="true"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:text=""
                    android:textColor="@color/t3"
                    android:button="@null"
                    android:textSize="14sp"
                    android:background="@drawable/alpha"
                    android:gravity="center"
                    android:id="@+id/zixun_btn4"/>
            </RelativeLayout>
        </LinearLayout>
    </RadioGroup>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F8F8F8"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/zixun_fr">
    </FrameLayout>

</LinearLayout>